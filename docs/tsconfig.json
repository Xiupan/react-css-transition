    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": ["dom", "es5", "scripthost", "es2015"],
    "noImplicitAny": false,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "react-css-transition": [
        "../src"
